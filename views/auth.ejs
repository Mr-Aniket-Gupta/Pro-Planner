<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Login / Signup</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet" />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;800&display=swap" rel="stylesheet" />
  <script src="https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js"></script>
  <script type="module" src="https://unpkg.com/@google/model-viewer/dist/model-viewer.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <link rel="stylesheet" href="/css/auth.css">
</head>

<body>
  <div id="universalLoader" class="loader-overlay" style="display:none;">
    <div class="loader-spinner"></div>
  </div>
  <div class="auth-container">
    <div class="auth-3d">
      <model-viewer src="https://modelviewer.dev/shared-assets/models/Astronaut.glb" alt="3D Model" auto-rotate
        camera-controls style="width: 200px; height: 200px; margin:auto;" background="transparent"></model-viewer>
    </div>
    <div class="auth-form">
      <div class="flex justify-center mb-4">
        <button class="tab-btn px-4 py-2 rounded-l-xl font-semibold text-blue-600 bg-blue-100 active" id="loginTab"
          onclick="showTab('login')">Login</button>
        <button class="tab-btn px-4 py-2 rounded-r-xl font-semibold text-blue-600 bg-blue-100" id="signupTab"
          onclick="showTab('signup')">Sign Up</button>
      </div>
      <!-- Login Form -->
      <form id="loginForm" class="space-y-4">
        <h2 class="text-2xl font-bold text-blue-600 mb-2 text-center">Login</h2>
        <input name="email" type="email" placeholder="Email"
          class="w-full border border-blue-100 p-3 rounded-xl bg-blue-50 focus:outline-none focus:ring-2 focus:ring-blue-200"
          required />
        <div class="relative">
          <input name="password" type="password" placeholder="Password" id="loginPassword"
            class="w-full border border-blue-100 p-3 rounded-xl bg-blue-50 focus:outline-none focus:ring-2 focus:ring-blue-200 pr-10"
            required />
          <span onclick="togglePassword('loginPassword', this)"
            class="absolute right-3 top-1/2 transform -translate-y-1/2 cursor-pointer text-blue-400">
            <svg id="eyeIconLogin" xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24"
              stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
            </svg>
          </span>
        </div>
        <div class="flex items-center justify-between">
          <label class="flex items-center text-sm text-gray-500">
            <input type="checkbox" name="remember" class="mr-2"> Remember me
          </label>
        </div>
        <button type="submit"
          class="w-full bg-gradient-to-r from-blue-400 to-blue-600 text-white px-4 py-2 rounded-xl font-semibold shadow hover:from-blue-500 hover:to-blue-700 transition">Login</button>
        <div class="text-center text-sm text-gray-400 mt-2">Don't have an account?
          <a href="#" class="text-blue-500 hover:underline" onclick="showTab('signup'); return false;">Sign Up</a>
        </div>
      </form>
      <!-- Login OTP Form -->
      <form id="loginOtpForm" class="space-y-4 hidden">
        <h2 class="text-2xl font-bold text-blue-600 mb-2 text-center">Login OTP</h2>
        <input type="text" placeholder="Enter OTP" maxlength="6"
          class="w-full border border-blue-100 p-3 rounded-xl bg-blue-50 focus:outline-none focus:ring-2 focus:ring-blue-200"
          required />
        <button type="submit"
          class="w-full bg-gradient-to-r from-blue-400 to-blue-600 text-white px-4 py-2 rounded-xl font-semibold shadow hover:from-blue-500 hover:to-blue-700 transition">Verify
          OTP</button>
      </form>
      <!-- Signup Form -->
      <form id="signupForm" class="space-y-4 hidden">
        <h2 class="text-2xl font-bold text-blue-600 mb-2 text-center">Sign Up</h2>
        <input name="name" type="text" placeholder="Full Name"
          class="w-full border border-blue-100 p-3 rounded-xl bg-blue-50 focus:outline-none focus:ring-2 focus:ring-blue-200"
          required />
        <input name="email" type="email" placeholder="Email"
          class="w-full border border-blue-100 p-3 rounded-xl bg-blue-50 focus:outline-none focus:ring-2 focus:ring-blue-200"
          required />
        <div class="relative">
          <input name="password" type="password" placeholder="Password" id="signupPassword"
            class="w-full border border-blue-100 p-3 rounded-xl bg-blue-50 focus:outline-none focus:ring-2 focus:ring-blue-200 pr-10"
            required />
          <span onclick="togglePassword('signupPassword', this)"
            class="absolute right-3 top-1/2 transform -translate-y-1/2 cursor-pointer text-blue-400">
            <svg id="eyeIconSignup" xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24"
              stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
            </svg>
          </span>
        </div>
        <div class="relative">
          <input name="confirmPassword" type="password" placeholder="Confirm Password" id="signupConfirmPassword"
            class="w-full border border-blue-100 p-3 rounded-xl bg-blue-50 focus:outline-none focus:ring-2 focus:ring-blue-200 pr-10"
            required />
          <span onclick="togglePassword('signupConfirmPassword', this)"
            class="absolute right-3 top-1/2 transform -translate-y-1/2 cursor-pointer text-blue-400">
            <svg id="eyeIconSignupConfirm" xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none"
              viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
            </svg>
          </span>
        </div>
        <button type="submit"
          class="w-full bg-gradient-to-r from-blue-400 to-blue-600 text-white px-4 py-2 rounded-xl font-semibold shadow hover:from-blue-500 hover:to-blue-700 transition">Sign
          Up</button>
        <div class="text-center text-sm text-gray-400 mt-2">Already have an account?
          <a href="#" class="text-blue-500 hover:underline" onclick="showTab('login'); return false;">Login</a>
        </div>
      </form>
      <!-- Signup OTP Form -->
      <form id="signupOtpForm" class="space-y-4 hidden">
        <h2 class="text-2xl font-bold text-blue-600 mb-2 text-center">Signup OTP</h2>
        <input type="text" placeholder="Enter OTP" maxlength="6"
          class="w-full border border-blue-100 p-3 rounded-xl bg-blue-50 focus:outline-none focus:ring-2 focus:ring-blue-200"
          required />
        <button type="submit"
          class="w-full bg-gradient-to-r from-blue-400 to-blue-600 text-white px-4 py-2 rounded-xl font-semibold shadow hover:from-blue-500 hover:to-blue-700 transition">Verify
          OTP</button>
      </form>

      <!-- Landing Page Link -->
      <div class="text-center mt-6 pt-4 border-t border-blue-100">
        <a href="/"
          class="text-blue-500 hover:text-blue-700 font-semibold flex items-center justify-center gap-2 transition">
          <svg width="18" height="18" fill="none" viewBox="0 0 18 18">
            <path d="M3 9l6-6 6 6" stroke="#3B82F6" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
            <rect x="5" y="9" width="8" height="6" rx="1" stroke="#3B82F6" stroke-width="1.5" />
          </svg>
          Back to Landing Page
        </a>
      </div>
    </div>
  </div>

  <script src="/js/auth.js" defer></script>
</body>

</html>